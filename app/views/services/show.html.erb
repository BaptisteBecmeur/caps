<!-- app/views/products/show.html.erb -->
<div class="container-service">
  <div class="container-fluid">
    <div class="row">
      <div class= "col-md-8 col-md-offset-2 form-artist text-center">
        <%= cl_image_tag @service.cover, height: 400, width: 400, crop: :fill, class: "artiste-picture" %>
        <div id="name-profile">
            <h4 class="text-center">
              <% if @service.pseudo.blank? %>
                <strong>C'est quoi ton pseudo ?</strong>
              <% else %>
                <%= @service.pseudo %>
              <% end %>
            </h4>
        </div>
      </div>
    </div>

    <div class="row">
      <div class= "col-md-8 col-md-offset-2 form-artist text-center">
        <ul class="list-unstyled">
          <li><%= @service.tag %></li>
          <li><%= @service.introduction %></li>
          <li><%= @service.content %></li>
          <li><%= @service.city %></li>
          <li><%= @service.country %></li>
          <li>Tarif : 200 €</li>
        </ul>
     </div>
    </div>

    <!-- Google maps -->
    <div class="row">
      <div class= "col-md-8 col-md-offset-2 form-artist text-center">
        <div class="row-fluid">
          <div class="col-md-8 col-md-offset-2">
            <div id="map" style="width: 100%; height: 400px;"></div>
            <br/>
              <% content_for(:after_js) do %>
                <script type="text/javascript">
                  $(document).ready(function() {
                    var handler = Gmaps.build('Google');
                    handler.buildMap({ internal: { id: 'map' } }, function() {
                      markers = handler.addMarkers(<%= raw @hash.to_json %>);
                      handler.bounds.extendWith(markers);
                      handler.fitMapToBounds();
                      if (markers.length == 0) {
                        handler.getMap().setZoom(2);
                      } else if (markers.length == 1) {
                        handler.getMap().setZoom(14);
                      }
                    });
                  });
                </script>
              <% end %>
            </div>
          </div>
        </div>
      </div>



    <!-- Photos associées -->
    <div class="row">
      <div class="col-md-8 col-md-offset-2 form-artist text-center">
        <h4>Quelques photos de mes spectacles</h4>
          <% if @service.user == current_user %>
            <%= link_to "Ajouter des photos", new_service_upload_path(@service), class: "btn btn-default" %>
          <% else %>
          <h5>Aucune photo associée à l'article</h5>
          <% end %>

        <ul class="list-unstyled list-inline">
          <% @service.uploads.each do |upload| %>
            <li>
              <%= cl_image_tag upload.photo, height: 500, width: 600, crop: :fill, class: "img-responsive image-download" %>
                <p>Titre : <%= upload.title %></p>
                <p>Description : <%= upload.description %></p>
                <% if @service.user == current_user %>
                  <%= link_to "supprimer la photo", service_upload_path(service_id: @service.id, id: upload.id),
                    data: { confirm: 'Are you sure?' }, method: :delete,class: "btn btn-primary" %>
                <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="row">
      <div class= "col-md-8 col-md-offset-2 form-artist-bottom">
        <div class="text-center">
          <% if @service.user == current_user %>
            <%= link_to "Modifier", edit_service_path(@service), class: "btn btn-success btn-md" %>
                <% else %>
              <button type="button" class="btn btn-success btn-md" data-toggle="modal" data-target="#myModal" > booker l'artiste</button>
            <% end %>

          <% if @service.user == current_user %>
            <%= link_to "supprimer", service_path(@service), method: :delete, data: { confirm: "Are you sure?" },class: "btn btn-danger" %>
          <% end %>

          <%= link_to "Tous les artistes", services_path, class: "btn btn-default btn-md" %>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3 class="modal-title text-center" id="myModalLabel">Paiement</h3>

          <h4 class ="text-center"> Booker cet artiste </h4>

              <div class="modal-body text-center">
                <script src="https://checkout.stripe.com/checkout.js"
                class="stripe-button"
                data-key="pk_Fhlzwtm9SCx6Uxww5fNXX8CUbwwAc"
                data-amount="2000"
                data-name="Caps App"
                data-description="1 presta (200.00 €)"
                data-image="">
                </script>
              </div>

            <h4 ="text-center"> Contacter l'artiste' </h4>

            <div class="contact-form">
            <form id="contact" method="post" class="form" role="form">
            <div class="row">
            <div class="col-xs-6 col-md-6 form-group">
            <input class="form-control" id="name" name="name" placeholder="Name" type="text" required autofocus />
            </div>
            <div class="col-xs-6 col-md-6 form-group">
            <input class="form-control" id="email" name="email" placeholder="Email" type="email" required />
            </div>
            </div>
            <textarea class="form-control" id="message" name="message" placeholder="Message" rows="5"></textarea>
            <br />
            <div class="row">
            <div class="col-xs-12 col-md-12 form-group">
            <button class="btn btn-primary pull-right" type="submit">Envoyer</button>
            </form>
            </div>


      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
      </div>
    </div>
  </div>
</div>
</div>

