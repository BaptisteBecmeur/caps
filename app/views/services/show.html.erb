<!-- app/views/products/show.html.erb -->
<div class="diving">
  <div class="container-fluid container-signup">
    <div class="row">
      <div class= "col-md-8 col-md-offset-2 form-profile ">

        <%= cl_image_tag @service.cover, height: 300, width: 400, crop: :fill %>
        <%= @service.pseudo %>
        <%= @service.introduction %>
        <%= @service.content %>
        <%= @service.city %>
        <%= @service.country %>
        <%= @service.address %>

        <div id="map"></div>

        <% content_for(:after_js) do %>
          <%= javascript_tag do %>
            $(document).ready(function() {
              var coord = <%= raw @flat_coordinates.to_json %>;
              alert('Flat coordinates are ' + coord.lat + ', ' + coord.lng);
            });
          <% end %>
        <% end %>

        <div class="text-center buttons-view-post">

          <% if @service.user == current_user %>
          <%= link_to "Modifier mes informations", edit_service_path(@service), class: "btn btn-success btn-md" %>
          <% else %>

          <button type="button" class="btn btn-success btn-md" data-toggle="modal" data-target="#myModal" > Acheter l'article </button>

          <% end %>

          <%= link_to "Voir tous les artistes", services_path, class: "btn btn-default btn-md" %>
        </div>


      </div>
    </div>
  </div>
</div>
